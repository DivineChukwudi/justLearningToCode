<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #C2E7FF;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20.0" />
    </padding>

    <children>
        <Label fx:id="errorView" prefHeight="17.0" prefWidth="218.0" style="-fx-text-fill: red;" text="" />

        <HBox prefHeight="62.0" prefWidth="600.0">
            <children>
                <Label text="Name:" />
                <TextField fx:id="nameField" prefHeight="62.0" prefWidth="200.0" promptText="Enter Name:">
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>

        <HBox prefHeight="67.0" prefWidth="600.0">
            <children>
                <Label text="Surname:" />
                <TextField fx:id="surnameField" prefHeight="67.0" prefWidth="200.0" promptText="Enter Surname:">
                    <HBox.margin>
                        <Insets left="35.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>

        <HBox prefHeight="67.0" prefWidth="600.0">
            <children>
                <Label prefHeight="17.0" prefWidth="49.0" text="Email:" />
                <TextField fx:id="emailField" prefHeight="62.0" prefWidth="199.0" promptText="Enter Email:">
                    <HBox.margin>
                        <Insets left="35.0" />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" prefHeight="121.0" prefWidth="600.0">
            <children>
                <Label prefHeight="17.0" prefWidth="93.0" text="Comment:" />
                <TextArea fx:id="commentField" prefHeight="121.0" prefWidth="527.0" promptText="Comments">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextArea>
            </children>
        </HBox>

        <Button fx:id="submitButton" alignment="BOTTOM_RIGHT" prefHeight="25.0" prefWidth="55.0" text="Submit" />
    </children>
</VBox>
