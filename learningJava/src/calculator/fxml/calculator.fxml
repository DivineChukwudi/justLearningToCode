<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="calculator.controllers.CalculatorController"
      prefWidth="320"
      prefHeight="480"
      spacing="0"
      stylesheets="@../css/calculator.css">

    <VBox styleClass="display-area" spacing="4">
        <Label fx:id="expressionLabel" text="" maxWidth="Infinity" alignment="CENTER_RIGHT" styleClass="expression-label"/>
        <Label fx:id="displayLabel" text="0" maxWidth="Infinity" alignment="CENTER_RIGHT" styleClass="display-label"/>
    </VBox>

    <GridPane hgap="1" vgap="1" styleClass="button-grid">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="25"/>
        </columnConstraints>

        <Button text="AC"  GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#onClear"    maxWidth="Infinity" prefHeight="72" styleClass="btn-utility"/>
        <Button text="+/-" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#onNegate"   maxWidth="Infinity" prefHeight="72" styleClass="btn-utility"/>
        <Button fx:id="btnPercent" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#onPercent" maxWidth="Infinity" prefHeight="72" styleClass="btn-utility"/>
        <Button text="/"   GridPane.columnIndex="3" GridPane.rowIndex="0" onAction="#onOperator" maxWidth="Infinity" prefHeight="72" styleClass="btn-operator"/>

        <Button text="7"   GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="8"   GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="9"   GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="*"   GridPane.columnIndex="3" GridPane.rowIndex="1" onAction="#onOperator" maxWidth="Infinity" prefHeight="72" styleClass="btn-operator"/>

        <Button text="4"   GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="5"   GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="6"   GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="-"   GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#onOperator" maxWidth="Infinity" prefHeight="72" styleClass="btn-operator"/>

        <Button text="1"   GridPane.columnIndex="0" GridPane.rowIndex="3" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="2"   GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="3"   GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#onNumber"   maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="+"   GridPane.columnIndex="3" GridPane.rowIndex="3" onAction="#onOperator" maxWidth="Infinity" prefHeight="72" styleClass="btn-operator"/>

        <Button text="0"   GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2"
                onAction="#onNumber" maxWidth="Infinity" prefHeight="72" styleClass="btn-zero"/>
        <Button text="."   GridPane.columnIndex="2" GridPane.rowIndex="4" onAction="#onDot"      maxWidth="Infinity" prefHeight="72" styleClass="btn-number"/>
        <Button text="="   GridPane.columnIndex="3" GridPane.rowIndex="4" onAction="#onEquals"   maxWidth="Infinity" prefHeight="72" styleClass="btn-equals"/>
    </GridPane>

</VBox>
